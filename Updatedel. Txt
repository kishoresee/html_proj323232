                    if (author) {
                        var peoplePicker = SPClientPeoplePicker.SPClientPeoplePickerDict.peoplePickerAuthor_TopSpan;
                        peoplePicker.AddUserKeys(author.get_lookupValue());
                    }
                }, 500);
            }, onQueryFail);
        }

        function updateItem() {
