  border-radius: 6px;
  padding: 10px 16px;
  margin: 0;
}

.issues-box li {
  padding: 4px 0;
  font-size: 14px;
  color: #333;
}

/* Textareas */
.p-inputtextarea {
  width: 100%;
  border: 1px solid rgba(0, 145, 90, 0.4);
  border-radius: 6px;
  padding: 8px 10px;
