            <a href="${gameUrl}" target="_blank" rel="noopener" class="btn-green-custom">Click to Participate</a>
            <a href="${cancelUrl}" class="btn-green-custom">Cancel</a>
          </div>
        </div>
      `;
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', loadGameDetails);
  </script>
