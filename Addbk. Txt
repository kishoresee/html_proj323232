    ExecuteOrDelayUntilScriptLoaded(function() {
        SP.SOD.executeFunc('sp.js', 'SP.UI.Controls.Navigation', function() {
            var topNav = new SP.UI.Controls.Navigation(
                "chrome_ctrl_placeholder",
