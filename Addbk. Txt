  <!-- Main Content -->
  <div class="container-fluid" style="margin-top: 80px;">
    <div class="row">
      <div class="col-12">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Book Management Dashboard</h5>
            <p class="text-muted">View and manage publication status</p>
          </div>
        </div>
      </div>
